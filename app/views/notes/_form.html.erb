<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation" class="alert-message block-message error">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
    <%= f.text_field :title %></div>
  </div>
  <div class="clearfix">
    <%= f.label :body %>
  <div class="input">
    <%= f.text_area :body ,:rows=>'7'%></div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn primary"%>
  <li class="btn">
    <%= link_to 'Back', notes_path %>
  </li>
  </div>
  </fieldset>
<% end %>
